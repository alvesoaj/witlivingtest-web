<%= content_for(:title, t('app_name')) %>

<div class="row marketing">
    <div class="col-md-12">
        <% @products.in_groups_of(3, false) do |group| %>
            <div class="col-lg-6">
                <% group.each do |product| %>
                    <div class="row">
                        <div class="col-md-4">
                            <%= image_tag(product.photo.thumb.url, class: 'img-thumbnail') %>
                        </div>
                        <div class="col-md-8">
                            <h4><%= product.name %></h4>
                            <p><%= product.description %></p>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><%= t('views.miscellaneous.home.stock') %>: <%= product.quantity %> | <strong><%= number_to_currency(product.price, unit: t('unit')) %></strong> </p>
                                </div>
                                <div class="col-md-6">
                                    <button id="js-add1ToCart-<%= product.id %>" type="button" class="btn btn-success js-add1ToCart" data-product-id="<%= product.id %>">+<span class="glyphicon glyphicon-shopping-cart"></span></button>
                                    <button id="js-rmv1ToCart-<%= product.id %>" type="button" class="btn btn-danger js-rmv1ToCart" data-product-id="<%= product.id %>">-<span class="glyphicon glyphicon-shopping-cart"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>