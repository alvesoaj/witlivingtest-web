<%= content_for(:title, t('activerecord.models.product.other')) %>

<div class="row">
    <h1><%= t('activerecord.models.product.other') %></h1>

    <div id="no-more-tables">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th><%= t("activerecord.attributes.product.name") %></th>
                    <th><%= t("activerecord.attributes.product.price") %></th>
                    <th><%= t("activerecord.attributes.product.quantity") %></th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                    <tr>
                        <td data-title="<%= t("activerecord.attributes.product.name") %>"><%= product.name %></td>
                        <td data-title="<%= t("activerecord.attributes.product.price") %>"><%= product.price %></td>
                        <td data-title="<%= t("activerecord.attributes.product.quantity") %>"><%= product.quantity %></td>
                        <td>
                            <%= link_to t('views.show'), product, class: 'btn btn-info' %>
                            <%= link_to t('views.edit'), edit_product_path(product), class: 'btn btn-primary' %>
                            <%= link_to t('views.destroy'), product, method: :delete, data: { confirm: t('views.are_you_sure') }, class: 'btn btn-danger' %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <br>

    <%= link_to t('views.products.new'), new_product_path, class: 'btn btn-warning' %>
</div>