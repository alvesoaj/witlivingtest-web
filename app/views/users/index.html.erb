<%= content_for(:title, t('activerecord.models.xuser.other')) %>

<div class="row">
    <div class="col-md-4">
        <div class="pull-left">
            <%= page_entries_info @users, entry_name: t('activerecord.models.xuser.other') %>
        </div>
    </div>
    <div class="col-md-4">
        <%= paginate @users -%>
    </div>
    <div class="col-md-4">
        <div class="pull-right">
            <%= link_to t('views.users.new'), new_user_path, class: 'btn btn-warning' %>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <h1><%= t('activerecord.models.xuser.other') %></h1>

        <div id="no-more-tables">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th><%= t("activerecord.attributes.user.avatar") %></th>
                        <th><%= t("activerecord.attributes.user.name") %></th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td data-title="<%= t("activerecord.attributes.user.avatar") %>"><img src="https://api.adorable.io/avatars/70/<%= user.email %>.io.png" alt="" class="img-circle"></td>
                            <td data-title="<%= t("activerecord.attributes.user.name") %>"><%= user.name %></td>
                            <td>
                                <%= link_to t('views.show'), user, class: 'btn btn-info' %>
                                <%= link_to t('views.edit'), edit_user_path(user), class: 'btn btn-primary' %>
                                <%= link_to t('views.destroy'), user, method: :delete, data: { confirm: t('views.are_you_sure') }, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="pull-left">
            <%= page_entries_info @users, entry_name: t('activerecord.models.xuser.other') %>
        </div>
    </div>
    <div class="col-md-4">
        <%= paginate @users -%>
    </div>
    <div class="col-md-4">
        <div class="pull-right">
            <%= link_to t('views.users.new'), new_user_path, class: 'btn btn-warning' %>
        </div>
    </div>
</div>
